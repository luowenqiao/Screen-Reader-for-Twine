{
  "name": "Twine Screen Reader",
  "version": "0.1",
  "manifest_version": 2,
  "description": "A screen reader for Twine games.",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16":"icon.png",
      "48":"icon.png",
      "128":"icon.png"
    }
  },
  "background":{
    "scripts":["background.js"]
  },
  "permissions": ["tabs", "<all_urls>"]
}