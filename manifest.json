{
  "name": "Screen Reader for Twine",
  "version": "0.1",
  "manifest_version": 3,
  "description": "A screen reader for Twine-made games.",
  "author":"Luowen Qiao",
  "icons":{
    "16":"icon.png",
    "32":"icon.png",
    "48":"icon.png",
    "128":"icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/sound-source.js",
        "scripts/json-vars.js",
        "scripts/dom-parser.js",
        "scripts/settings.js",
        "scripts/tutorial.js",
        "scripts/ui-display.js",
        "scripts/controls.js",
        "scripts/main.js"]
    }
  ],

  "permissions": [
    "tts",
    "storage",
    "tabs"
  ]

  
}