{
  "name": "Twine Screen Reader",
  "version": "0.1",
  "manifest_version": 3,
  "description": "A screen reader for Twine games.",
  "author":"Luowen Qiao",
  "icons":{
    "16":"icon.png",
    "32":"icon.png",
    "48":"icon.png",
    "128":"icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action":{
    "default_popup":"popup.html"
  },

  "permissions": [
    "storage", 
    "activeTab", 
    "scripting",
    "tabs",
    "tts"
  ]
}